---
layout: site
---

<main>

  {% if site.show_breadcrumbs %}
    {% include breadcrumbs.liquid %}
  {% endif %}

  {% if site.titles_from_headings.strip_title == true%}
    <h1>{{ page.title | default: post.title }}</h1>
  {% endif %}

  {% if site.show_navigation == true %}

  <nav id="site-nav">
    <input type="checkbox" id="show-site-nav"></input><label for="show-site-nav">Menu</label>
    {% include navigation.liquid context="/" %}
  </nav>

  {% endif %}

  {% include page-information.liquid %}
  
  {{ content }}

</main>
